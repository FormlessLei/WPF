<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="JinReporter_Avalonia.FileDropTextBox"
             mc:Ignorable="d"
             d:DesignHeight="50"
             d:DesignWidth="300">


  <Grid ColumnDefinitions="*,Auto">
    <TextBox x:Name="PathTextBox" Grid.Column="0" VerticalAlignment="Center"
             DragDrop.AllowDrop="True" VerticalContentAlignment="Center"
             Height="50" Background="#FFF0F0F0"/>
    <Button Grid.Column="1" Content="浏览..." Height="50" Width="60"  VerticalContentAlignment="Center"
            Click="BrowseButton_Click"/>
  </Grid>
</UserControl>
