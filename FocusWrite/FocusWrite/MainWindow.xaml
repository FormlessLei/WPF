<Window x:Class="FocusWrite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Focus Write" Height="450" Width="800"
        Icon="Write.ico">
    <Window.Resources>
        <!-- 定义阴影效果 -->
        <DropShadowEffect x:Key="DropShadowEffect" BlurRadius="10" ShadowDepth="3" Color="#40000000"/>

        <!-- 定义输入速度文本的样式 -->
        <Style x:Key="SpeedTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <!-- 鼠标悬停时显示手型 -->
            <Style.Triggers>
                <!-- 鼠标悬停时改变背景色 -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
                <!-- 鼠标按下时改变背景色 -->
                <Trigger Property="IsMouseDirectlyOver" Value="True">
                    <Setter Property="Background" Value="#D0D0D0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <!-- 定义两列布局 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- 输入框占据大部分空间 -->
            <ColumnDefinition Width="230"/>
            <!-- 统计栏宽度为230 -->
        </Grid.ColumnDefinitions>

        <!-- 输入框 -->
        <TextBox x:Name="InputTextBox" 
                 Grid.Column="0"
                 HorizontalAlignment="Stretch" 
                 VerticalAlignment="Stretch" 
                 Margin="10" 
                 TextChanged="InputTextBox_TextChanged"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 FontSize="16"
                 FontFamily="Consolas"/>

        <!-- 统计栏 -->
        <Border Grid.Column="1"
                VerticalAlignment="Top" 
                Margin="10"
                Background="#F0F0F0"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                Padding="10"
                CornerRadius="5"
                Effect="{StaticResource DropShadowEffect}">
            <StackPanel>
                <!-- 本次字数显示 -->
                <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                    <!-- 小标记 -->
                    <TextBlock Text="📝" FontSize="12" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <!-- 本次字数文本 -->
                    <TextBlock x:Name="SessionWordCountText" 
                               Text="本次字数: 0" 
                               Style="{StaticResource SpeedTextStyle}"
                               MouseDown="SessionWordCountText_MouseDown"/>
                </StackPanel>

                <!-- 输入速度显示 -->
                <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                    <!-- 小标记 -->
                    <TextBlock Text="⏱" FontSize="12" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <!-- 输入速度文本 -->
                    <TextBlock x:Name="TypingSpeedText" 
                               Text="输入速度: 0 字/分钟" 
                               Style="{StaticResource SpeedTextStyle}"
                               MouseDown="TypingSpeedText_MouseDown"/>
                </StackPanel>

                <TextBlock x:Name="TypingTimeText" Text="打字时间: 0 秒" FontSize="14"/>
                <TextBlock x:Name="IdleTimeText" Text="空闲时间: 0 秒" FontSize="14"/>

                <!-- 保存按钮 -->
                <Button Content="保存" 
                        Click="SaveButton_Click" 
                        Margin="0,10,0,0" 
                        FontSize="14"
                        Background="#0078D7" 
                        Foreground="White" 
                        Padding="5"/>

                <!-- 加载按钮 -->
                <Button Content="加载" 
                        Click="LoadButton_Click" 
                        Margin="0,10,0,0" 
                        FontSize="14"
                        Background="#0078D7" 
                        Foreground="White" 
                        Padding="5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>