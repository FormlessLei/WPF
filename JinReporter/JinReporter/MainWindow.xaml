<Window x:Class="JinReporter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JinReporter"
        mc:Ignorable="d"
        Title="多模板表格处理工具" Height="500" Width="650">
    <ScrollViewer>
        <StackPanel Margin="15">
            <!-- 模板文件输入区域 -->
            <GroupBox Header="模板文件">
                <StackPanel>
                    <local:FileDropTextBox x:Name="TemplateFileBox" Height="30"/>
                    <Button Content="确认模板" Click="ConfirmTemplate_Click" 
                            Margin="0,10,0,0" Width="80" HorizontalAlignment="Left"/>
                </StackPanel>
            </GroupBox>

            <!-- 动态生成的数据源输入区域 -->
            <ItemsControl x:Name="DataSourceControls" Margin="0,20,0,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <GroupBox Header="{Binding TemplateName}" Margin="0,0,0,15">
                            <StackPanel>
                                <Label Content="国家数据表路径:"/>
                                <local:FileDropTextBox Text="{Binding CountryTablePath, Mode=TwoWay}"/>

                                <Label Content="商品数据表路径:"/>
                                <local:FileDropTextBox Text="{Binding ProductTablePath, Mode=TwoWay}"/>
                            </StackPanel>
                        </GroupBox>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- 操作按钮 -->
            <Button Content="开始处理" Click="ProcessButton_Click" Height="35" Margin="0,20"/>
        </StackPanel>
    </ScrollViewer>
</Window>